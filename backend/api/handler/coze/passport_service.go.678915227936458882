// PassportSSOLoginGet .
// @router /passport/sso/login [GET]
func PassportSSOLoginGet(ctx context.Context, c *app.RequestContext) {
	token := string(c.Query("token"))
	
	if token == "" {
		c.JSON(http.StatusBadRequest, map[string]interface{}{
			"code": http.StatusBadRequest,
			"msg":  "Token parameter is required",
		})
		return
	}

	// Use the existing SSO middleware logic to validate token
	claims, err := validateJWT(token)
	if err != nil || claims == nil {
		logs.CtxErrorf(ctx, "[PassportSSOLoginGet] Invalid token: %v", err)
		c.JSON(http.StatusUnauthorized, map[string]interface{}{
			"code": http.StatusUnauthorized,
			"msg":  "Invalid or expired token",
		})
		return
	}

	// Check platform permission
	platform := claims.Platform
	if platform != "agent" && platform != "both" {
		c.JSON(http.StatusForbidden, map[string]interface{}{
			"code": http.StatusForbidden,
			"msg":  "No permission to access Agent platform",
		})
		return
	}

	// Get user by email, create if not exists (SSO sync)
	userInfo, err := user.UserApplicationSVC.GetUserByEmail(ctx, claims.Email)
	if err != nil || userInfo == nil {
		// User not found in Agent system, create user automatically (SSO sync)
		logs.Infof("[PassportSSOLoginGet] User not found, creating SSO user: %s", claims.Email)
		
		// Create SSO user with basic info
		registerReq := &passport.PassportWebEmailRegisterV2PostRequest{}
		registerReq.Email = claims.Email
		registerReq.Password = "sso-auto-generated-" + claims.Email // Random password for SSO users
		
		// Register the user
		_, sessionKey, regErr := user.UserApplicationSVC.PassportWebEmailRegisterV2(ctx, "zh-CN", registerReq)
		if regErr != nil {
			logs.CtxErrorf(ctx, "[PassportSSOLoginGet] Failed to create SSO user: %v", regErr)
			c.JSON(http.StatusInternalServerError, map[string]interface{}{
				"code": http.StatusInternalServerError,
				"msg":  "Failed to create SSO user",
			})
			return
		}
		
		// Get the newly created user
		userInfo, err = user.UserApplicationSVC.GetUserByEmail(ctx, claims.Email)
		if err != nil || userInfo == nil {
			logs.CtxErrorf(ctx, "[PassportSSOLoginGet] Failed to get newly created user: %v", err)
			c.JSON(http.StatusInternalServerError, map[string]interface{}{
				"code": http.StatusInternalServerError,
				"msg":  "Failed to get user info",
			})
			return
		}
		
		// Use the session key from registration
		userInfo.SessionKey = sessionKey
	}

	// Use the session key from user info (similar to normal login flow)
	finalSessionKey := userInfo.SessionKey
	if finalSessionKey == "" {
		logs.CtxErrorf(ctx, "[PassportSSOLoginGet] No session key available for user: %s", claims.Email)
		c.JSON(http.StatusInternalServerError, map[string]interface{}{
			"code": http.StatusInternalServerError,
			"msg":  "Failed to create session",
		})
		return
	}

	// Set session cookie (same as normal login)
	c.SetCookie(entity.SessionKey,
		finalSessionKey,
		consts.SessionMaxAgeSecond,
		"/", domain.GetOriginHost(c),
		protocol.CookieSameSiteDefaultMode,
		false, true)

	logs.Infof("[PassportSSOLoginGet] SSO login success for user: %s", claims.Email)

	// Return user info
	c.JSON(http.StatusOK, map[string]interface{}{
		"code": 0,
		"msg":  "SSO login success",
		"data": userInfo,
	})
}

func validateJWT(tokenString string) (*JWTClaims, error) {
	parts := strings.Split(tokenString, ".")
	if len(parts) != 3 {
		return nil, nil
	}

	headerBytes, err := base64.RawURLEncoding.DecodeString(parts[0])
	if err != nil {
		return nil, err
	}

	payloadBytes, err := base64.RawURLEncoding.DecodeString(parts[1])
	if err != nil {
		return nil, err
	}

	signature, err := base64.RawURLEncoding.DecodeString(parts[2])
	if err != nil {
		return nil, err
	}

	expectedSignature := generateSignature(parts[0] + "." + parts[1])
	if !hmac.Equal(signature, expectedSignature) {
		return nil, nil
	}

	var claims JWTClaims
	if err := json.Unmarshal(payloadBytes, &claims); err != nil {
		return nil, err
	}

	if time.Now().Unix() > claims.Exp {
		return nil, nil
	}

	_ = headerBytes

	return &claims, nil
}

func generateSignature(data string) []byte {
	h := hmac.New(sha256.New, []byte(jwtSecretKey))
	h.Write([]byte(data))
	return h.Sum(nil)
}
